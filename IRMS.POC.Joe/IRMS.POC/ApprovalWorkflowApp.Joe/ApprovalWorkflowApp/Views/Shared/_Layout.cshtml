<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button"  id="btnNavMenu" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "background-image:url('/AppImages/Hermes.jpeg'); display:block; height: 46px; width: 113px" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Request Forms <b class="caret"></b></a>
                        <ul class="dropdown-menu multi-level">
                            @*<li>@Html.ActionLink("Empower Request Form", "EmpowerSubmitRequest", "SubmitRequest")</li>
                            <li>@Html.ActionLink("CyberLab Request Form", "EmpowerSubmitRequest", "SubmitRequest")</li>
                            <li>@Html.ActionLink("BCP Assay Request Form", "EmpowerSubmitRequest", "SubmitRequest")</li>*@
                            <li>@Html.ActionLink("Hermes IDS Application Access Request Form", "IDSSubmitRequest", "SubmitRequest")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Approval List<b class="caret"></b></a>
                        <ul class="dropdown-menu multi-level">
                            <li>@Html.ActionLink("Pending Approvals", "PendingApprovals", "Approval")</li>
                            <li>@Html.ActionLink("All Requests", "AllApprovals", "Approval")</li>
                        </ul>
                    </li>
                    @if (HttpContext.Current.User.IsInRole("JRD-APP-BCPASSAYMGMT-DB") || HttpContext.Current.User.Identity.Name.ToUpper() == "NA\\SSAHA14")
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
                                <ul class="dropdown-menu multi-level">
                                    <li>@Html.ActionLink("Audit", "Audit", "Admin")</li>
                                    <li>@Html.ActionLink("For IT Support", "ITSupport", "Admin")</li>
                                </ul>
                            </li>
                        }

                </ul>
                <p class="nav navbar-text navbar-right">Welcome, @HttpContext.Current.Session["CurrentUser"].ToString()!</p> @*@User.Identity.Name*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Johnson & Johnson Inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/AngularScripts")


    <script src="~/Scripts/angular-toastr.tpls.js"></script>
    @*<script src="~/Scripts/dirPagination.js"></script>*@

    <link href="~/Content/isteven-multi-select.css" rel="stylesheet" />
    <script src="~/Scripts/isteven-multi-select.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <link href="~/Content/ui-bootstrap-csp.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.rawgit.com/esvit/ng-table/1.0.0/dist/ng-table.min.css">
    <script src="https://cdn.rawgit.com/esvit/ng-table/1.0.0/dist/ng-table.js"></script>

    <link rel="stylesheet" href="http://mbenford.github.io/ngTagsInput/css/ng-tags-input.min.css" />
    <script src="http://mbenford.github.io/ngTagsInput/js/ng-tags-input.min.js"></script>
    <script src="~/Scripts/ng-file-upload.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
